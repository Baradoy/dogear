<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="book-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :filename %>
    <%= text_input f, :filename %>
    <%= error_tag f, :filename %>
  
    <%= label f, :title %>
    <%= text_input f, :title %>
    <%= error_tag f, :title %>
  
    <%= label f, :author %>
    <%= text_input f, :author %>
    <%= error_tag f, :author %>
  
    <%= label f, :root_file_name %>
    <%= text_input f, :root_file_name %>
    <%= error_tag f, :root_file_name %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
